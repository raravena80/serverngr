<%- model_class = Server -%>
<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human.titleize %></h2>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:customer_name) %>:</strong></dt>
  <dd><%= @server.customer_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:customer_email) %>:</strong></dt>
  <dd><%= @server.customer_email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:server_name) %>:</strong></dt>
  <dd><%= @server.server_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:server_id) %>:</strong></dt>
  <dd><%= @server.server_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:server_type) %>:</strong></dt>
  <dd><%= @server.server_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:server_public_ipaddress) %>:</strong></dt>
  <dd><%= @server.server_public_ipaddress %></dd>
  <dt><strong><%= model_class.human_attribute_name(:server_private_ipaddress) %>:</strong></dt>
  <dd><%= @server.server_private_ipaddress %></dd>
  <dt><strong><%= model_class.human_attribute_name(:server_account) %>:</strong></dt>
  <dd><%= @server.server_account %></dd>
  <dt><strong><%= model_class.human_attribute_name(:server_password) %>:</strong></dt>
  <dd><%= @server.server_password %></dd>
  <dt><strong><%= model_class.human_attribute_name(:server_status) %>:</strong></dt>
  <dd><%= @server.server_status %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              servers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_server_path(@server), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              server_path(@server),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
