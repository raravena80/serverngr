<%= form_for @server, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :customer_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :customer_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :customer_email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :customer_email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :server_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :server_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :server_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :server_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :server_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :server_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :server_public_ipaddress, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :server_public_ipaddress, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :server_private_ipaddress, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :server_private_ipaddress, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :server_account, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :server_account, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :server_password, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :server_password, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :server_status, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :server_status, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                servers_path, :class => 'btn' %>
  </div>
<% end %>
