<%- model_class = Server -%>
<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h2>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:customer_name) %></th>
      <th><%= model_class.human_attribute_name(:customer_email) %></th>
      <th><%= model_class.human_attribute_name(:server_name) %></th>
      <th><%= model_class.human_attribute_name(:server_id) %></th>
      <th><%= model_class.human_attribute_name(:server_type) %></th>
      <th><%= model_class.human_attribute_name(:server_public_ipaddress) %></th>
      <th><%= model_class.human_attribute_name(:server_private_ipaddress) %></th>
      <th><%= model_class.human_attribute_name(:server_account) %></th>
      <th><%= model_class.human_attribute_name(:server_status) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @servers.each do |server| %>
      <tr>
        <td><%= link_to server.id, server_path(server) %></td>
        <td><%= server.customer_name %></td>
        <td><%= server.customer_email %></td>
        <td><%= server.server_name %></td>
        <td><%= server.server_id %></td>
        <td><%= server.server_type %></td>
        <td><%= server.server_public_ipaddress %></td>
        <td><%= server.server_private_ipaddress %></td>
        <td><%= server.server_account %></td>
        <td><%= server.server_status %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_server_path(server), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      server_path(server),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_server_path,
            :class => 'btn btn-primary' %>
